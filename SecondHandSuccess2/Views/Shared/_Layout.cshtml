<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Second Hand Success</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

<link href="~/Content/bootstrap.css" rel="stylesheet" />
<link href="~/Content/Site.css" rel="stylesheet" />

</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand" href="~/Views/Home/Index.cshtml">Second Hand Success</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContext" aria-expanded="false" aria-label="Toogle nav">
            <span class="navbar-toggler-icon"></span>
        </button>
        //must get rid of nav bar before present
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                
                <li class="nav-item">@Html.ActionLink("Home", "Index", "Home")</li>
                <li class="nav-item">@Html.ActionLink("Login", "LogIn", "Home")</li>
                <li class="nav-item">@Html.ActionLink("UserHomePage", "UserHomePage", "Home")</li>
                <li class="nav-item">@Html.ActionLink("AdminHomePage", "AdminHome", "Admin")</li>
                <li class="nav-item">@Html.ActionLink("LecturerHomePage", "LecturerHomePage", "Home")</li>
                <li class="nav-item">@Html.ActionLink("EditListing", "EditListing", "Home")</li>
            </ul>
        </div>
    </nav> 
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - It's not a Bug, Its a Feature</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
